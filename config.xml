<?xml version='1.0' encoding='utf-8'?>
<widget id="com.denunciamovil.denunciamovil" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Denuncia Movil(beta)</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-camera" spec="2.2.0" />
    <plugin name="cordova-plugin-dialogs" spec="1.2.1" />
    <plugin name="cordova-plugin-geolocation" spec="2.2.0" />
    <plugin name="phonegap-plugin-push" spec="1.8.1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="loadUrlTimeoutValue" value="700000" />
    <preference name="Fullscreen" value="true" />
    <!-- <preference name="SplashScreen" value="screen"/> -->
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="FadeSplashScreen" value="false"/>

    <!-- <access origin="https://maps.googleapis.com" /> -->
    <!-- <preference name="fullscreen" value="false" /> -->
    <!-- <preference name="android-windowSoftInputMode" value="stateVisible" /> -->
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/screen/android/splash-port-hdpi.png" density="land-hdpi"/>
        <splash src="res/screen/android/splash-port-ldpi.png" density="land-ldpi"/>
        <splash src="res/screen/android/splash-port-mdpi.png" density="land-mdpi"/>
        <splash src="res/screen/android/splash-port-xhdpi.png" density="land-xhdpi"/>
        <splash src="res/screen/android/splash-land-hdpi.png" density="port-hdpi"/>
        <splash src="res/screen/android/splash-land-ldpi.png" density="port-ldpi"/>
        <splash src="res/screen/android/splash-land-mdpi.png" density="port-mdpi"/>
        <splash src="res/screen/android/splash-land-xhdpi.png" density="port-xhdpi"/>

        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="true" />

        <icon src="res/android/icon-ldpi.png" density="ldpi" />
        <icon src="res/android/icon-mdpi.png" density="mdpi" />
        <icon src="res/android/icon-hdpi.png" density="hdpi" />
        <icon src="res/android/icon-xhdpi.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
