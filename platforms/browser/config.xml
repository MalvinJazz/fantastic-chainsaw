<?xml version='1.0' encoding='utf-8'?>
<widget id="com.denunciapp.denunciapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <name>DenunciApp</name>
    <description>
        Aplicaci√≥n para realizar denuncias de tipo Criminal, Municipal,
        Medio ambiental o de Derechos humanos, dentro del territorio de Guatemala.
    </description>
    <author email="malvinjazz@live.com" href="">
        MalvinJazz
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <prerence name="BackgroundColor" value="0xffffffff" />
    <preference name="loadUrlTimeoutValue" value="700000" />
    <preference name="Fullscreen" value="false" />
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="FadeSplashScreen" value="false" />
</widget>
